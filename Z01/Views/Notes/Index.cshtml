@model IEnumerable<Z01.Models.Note>

@{
    ViewData["Title"] = "Notes";
}

@{
    var categories = (List<string>) ViewData["Categories"];
}

<h1>Notes index</h1>

<form class="form-inline row" style="border: 1px solid lightgray;padding: 10px;">
    <div class="form-group col-md-offset-7 col-md-5">
        <span>Category </span>
        <select class="form-control">
            <option></option>
            @foreach (var category in @categories)
            {
                <option>
                    @Html.DisplayFor(categoryItem => category)
                </option>
            }
        </select>
        <button class="btn btn-default">Filter</button>
        <button class="btn btn-default">Clear</button>
    </div>
</form>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th >
                @Html.DisplayNameFor(model => model.title)
            </th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.title)
                            </td>
                            <td>
                                <a class="btn btn-default" asp-action="Edit" asp-route-title="@item.title">Edit</a>
                                <a class="btn btn-default" asp-action="Delete" asp-route-title="@item.title">Delete</a>
                            </td>
                        </tr>
            }
    </tbody>
</table>
<div class="row">
    <a class="btn btn-default" asp-action="New">New</a> 
    <button class="btn btn-default col-sm-offset-5 col-md-offset-6">Prev Page</button>
    <span>1 / 10</span>
    <button class="btn btn-default ">Next Page</button>
</div>