@model Z01.Models.Note

@{
    var index = ViewData["Id"];
}

<h1>Note Edit</h1>

<form class="form-horizontal" asp-action="Edit" method="post">
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="titleInput">Title of the note:</label>
            <!-- <input asp-for="title" type="text" class="form-control" /> -->
            @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class="form-control", @id="titleInput"} })
            @Html.ValidationMessageFor(model => model.title)
        </div>
        <div class="form-group">
            <div class="checkbox control-label">
                    <label class="control-label">
                        <input type="checkbox"/><b>Markdown</b>
                    </label>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="textarea">In Categories: </label>
            <textarea class="form-control col-sm-6" asp-for="content" rows="8" id="textarea"></textarea>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.extension, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.extension, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <input type="hidden" id="old_title" name="old_title" value="@Model.title"/>
        <input class="btn btn-default" type="submit" value="OK"/>

    </fieldset>
</form>
<div>
    <a asp-action="Index">Back to Notes List</a>
</div>